// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                          BigInt    @id @default(autoincrement())
  kick_user_id                BigInt    @unique
  username                    String
  email                       String?
  email_verified_at           DateTime?
  bio                         String?   @db.Text
  profile_picture_url         String?
  custom_profile_picture_url  String?
  access_token_hash           String?
  refresh_token_hash          String?
  // Encrypted tokens (can be decrypted for API calls)
  access_token_encrypted      String?   @db.Text
  refresh_token_encrypted     String?   @db.Text
  notifications_enabled       Boolean   @default(true)
  email_notifications_enabled Boolean   @default(false)
  chat_font_size              String?   @default("14px")
  chat_show_timestamps        Boolean   @default(true)
  last_login_at               DateTime?
  last_ip_address             String?
  last_user_agent             String?
  // Social Media Links (for duplicate detection)
  instagram_url               String?
  twitter_url                 String?
  // Signup Tracking
  signup_ip_address           String?
  signup_user_agent           String?
  signup_referrer             String?
  // Connected Accounts
  discord_user_id             String?
  discord_username            String?
  discord_access_token_hash   String?
  telegram_user_id            String?
  telegram_username           String?
  telegram_access_token_hash  String?
  kick_connected              Boolean   @default(true)
  discord_connected           Boolean   @default(false)
  telegram_connected          Boolean   @default(false)
  is_admin                    Boolean   @default(false)
  created_at                  DateTime  @default(now())
  updated_at                  DateTime  @updatedAt

  // Relations
  points                       UserPoints?
  point_history                PointHistory[]
  sent_messages                ChatMessage[]        @relation("SenderMessages")
  broadcaster_messages         ChatMessage[]        @relation("BroadcasterMessages")
  offline_sent_messages        OfflineChatMessage[] @relation("OfflineSenderMessages")
  offline_broadcaster_messages OfflineChatMessage[] @relation("OfflineBroadcasterMessages")
  stream_sessions              StreamSession[]
  user_sessions                UserSession[]
  raffles_created              Raffle[]
  raffle_entries               RaffleEntry[]
  advent_purchases              AdventPurchase[]

  @@map("users")
}

model StreamSession {
  id                  BigInt    @id @default(autoincrement())
  broadcaster_user_id BigInt
  channel_slug        String
  session_title       String?
  thumbnail_url       String?
  started_at          DateTime  @default(now())
  ended_at            DateTime?
  peak_viewer_count   Int       @default(0)
  total_messages      Int       @default(0)
  created_at          DateTime  @default(now())
  updated_at          DateTime  @updatedAt

  // Relations
  broadcaster   User           @relation(fields: [broadcaster_user_id], references: [kick_user_id])
  chat_messages ChatMessage[]
  point_history PointHistory[]

  @@map("stream_sessions")
}

model ChatMessage {
  id                    BigInt   @id @default(autoincrement())
  message_id            String   @unique
  stream_session_id     BigInt?
  sender_user_id        BigInt
  sender_username       String
  broadcaster_user_id   BigInt
  content               String   @db.Text
  emotes                Json?
  timestamp             BigInt
  sender_username_color String?
  sender_badges         Json?
  sender_is_verified    Boolean  @default(false)
  sender_is_anonymous   Boolean  @default(false)
  points_earned         Int      @default(0)
  points_reason         String?
  sent_when_offline     Boolean  @default(false)
  created_at            DateTime @default(now())

  // Relations
  stream_session StreamSession? @relation(fields: [stream_session_id], references: [id])
  sender         User           @relation("SenderMessages", fields: [sender_user_id], references: [kick_user_id])
  broadcaster    User           @relation("BroadcasterMessages", fields: [broadcaster_user_id], references: [kick_user_id])

  @@map("chat_messages")
}

model OfflineChatMessage {
  id                    BigInt   @id @default(autoincrement())
  message_id            String   @unique
  sender_user_id        BigInt
  sender_username       String
  broadcaster_user_id   BigInt
  content               String   @db.Text
  emotes                Json?
  timestamp             BigInt
  sender_username_color String?
  sender_badges         Json?
  sender_is_verified    Boolean  @default(false)
  sender_is_anonymous   Boolean  @default(false)
  created_at            DateTime @default(now())

  // Relations
  sender      User @relation("OfflineSenderMessages", fields: [sender_user_id], references: [kick_user_id])
  broadcaster User @relation("OfflineBroadcasterMessages", fields: [broadcaster_user_id], references: [kick_user_id])

  @@map("offline_chat_messages")
}

model UserPoints {
  id                   BigInt    @id @default(autoincrement())
  user_id              BigInt    @unique
  total_points         Int       @default(0)
  total_emotes         Int       @default(0)
  last_point_earned_at DateTime?
  is_subscriber        Boolean   @default(false)
  created_at           DateTime  @default(now())
  updated_at           DateTime  @updatedAt

  // Relations
  user User @relation(fields: [user_id], references: [id])

  @@map("user_points")
}

model PointHistory {
  id                BigInt   @id @default(autoincrement())
  user_id           BigInt
  stream_session_id BigInt?
  points_earned     Int      @default(1)
  message_id        String?  @unique
  earned_at         DateTime @default(now())
  created_at        DateTime @default(now())

  // Relations
  user           User           @relation(fields: [user_id], references: [id])
  stream_session StreamSession? @relation(fields: [stream_session_id], references: [id])

  @@map("point_history")
}

model Raffle {
  id                   BigInt    @id @default(autoincrement())
  title                String
  description          String?   @db.Text
  type                 String    @default("general") // daily, weekly, special, sub_only, general
  prize_description    String
  ticket_cost          Int
  max_tickets_per_user  Int?      // null = no limit
  total_tickets_cap     Int?      // null = no cap
  start_at             DateTime
  end_at               DateTime
  status               String    @default("upcoming") // upcoming, active, drawing, completed, cancelled
  sub_only             Boolean   @default(false)
  hidden_until_start   Boolean   @default(false)
  hidden               Boolean   @default(false)  // Hidden from public view by admin
  draw_seed            String?   // For transparency
  drawn_at             DateTime?
  claim_message        String?   @db.Text  // Custom instructions for winners to claim prize
  created_by           BigInt
  created_at           DateTime  @default(now())
  updated_at           DateTime  @updatedAt

  creator User           @relation(fields: [created_by], references: [id])
  entries RaffleEntry[]
  winners RaffleWinner[]

  @@map("raffles")
}

model RaffleEntry {
  id         BigInt   @id @default(autoincrement())
  raffle_id  BigInt
  user_id    BigInt
  tickets    Int      @default(1)
  created_at DateTime @default(now())

  raffle Raffle        @relation(fields: [raffle_id], references: [id], onDelete: Cascade)
  user   User          @relation(fields: [user_id], references: [id])
  wins   RaffleWinner[]

  @@unique([raffle_id, user_id])
  @@map("raffle_entries")
}

model RaffleWinner {
  id          BigInt   @id @default(autoincrement())
  raffle_id   BigInt
  entry_id    BigInt
  selected_at DateTime @default(now())

  raffle Raffle      @relation(fields: [raffle_id], references: [id], onDelete: Cascade)
  entry  RaffleEntry @relation(fields: [entry_id], references: [id], onDelete: Cascade)

  @@map("raffle_winners")
}

model UserSession {
  id           BigInt   @id @default(autoincrement())
  user_id      BigInt
  session_id   String   @unique // Unique session identifier (e.g., UUID)
  region       String? // Geographic region (e.g., "NA-East", "EU-West")
  country      String? // Country code (e.g., "US", "CA", "GB")
  client_type  String? // Client type: "web", "mobile", "embedded"
  user_agent   String?  @db.Text // User agent string (for device/browser detection)
  ip_hash      String? // Hashed IP address (for privacy - not storing raw IP)
  created_at   DateTime @default(now())
  last_seen_at DateTime @default(now())
  updated_at   DateTime @updatedAt

  // Relations
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([last_seen_at])
  @@map("user_sessions")
}

model PointAwardJob {
  id                BigInt    @id @default(autoincrement())
  kick_user_id      BigInt
  stream_session_id BigInt?
  message_id        String    @unique
  badges            Json? // Badges array for subscriber detection
  emotes            Json? // Emotes array for emote counting
  status            String    @default("pending") // pending, processing, completed, failed
  attempts          Int       @default(0)
  locked_at         DateTime?
  processed_at      DateTime?
  last_error        String?   @db.Text
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  @@index([status, created_at])
  @@index([status, locked_at])
  @@map("point_award_jobs")
}

// Full chat message job queue - worker handles ALL writes
model ChatJob {
  id                BigInt    @id @default(autoincrement())
  message_id        String    @unique

  // Full message payload (stored as JSON for flexibility)
  payload           Json      // Contains: sender, broadcaster, content, emotes, badges, timestamp, etc.

  // Denormalized fields for quick filtering
  sender_user_id      BigInt
  broadcaster_user_id BigInt
  stream_session_id   BigInt?

  // Job status
  status            String    @default("pending") // pending, processing, completed, failed
  attempts          Int       @default(0)
  locked_at         DateTime?
  processed_at      DateTime?
  last_error        String?   @db.Text
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  @@index([status, created_at])
  @@index([status, locked_at])
  @@map("chat_jobs")
}

model AdventPurchase {
  id         BigInt   @id @default(autoincrement())
  user_id    BigInt
  item_id    String   // e.g. "day-9", "day-23a"
  tickets    Int      @default(1)
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])

  @@unique([user_id, item_id])
  @@map("advent_purchases")
}
