// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // Using --no-engine flag: Accelerate handles the query engine
  // No binaryTargets needed when using Accelerate
}

datasource db {
  provider = "postgresql"
  // Connection URLs are configured in prisma.config.ts (Prisma 7)
}

model User {
  id                          BigInt    @id @default(autoincrement())
  kick_user_id                BigInt    @unique
  username                    String
  email                       String?
  email_verified_at           DateTime?
  bio                         String?   @db.Text
  profile_picture_url         String?
  custom_profile_picture_url  String?
  access_token_hash           String?
  refresh_token_hash          String?
  // Encrypted tokens (can be decrypted for API calls)
  access_token_encrypted      String?   @db.Text
  refresh_token_encrypted     String?   @db.Text
  notifications_enabled       Boolean   @default(true)
  email_notifications_enabled Boolean   @default(false)
  chat_font_size              String?   @default("14px")
  chat_show_timestamps        Boolean   @default(true)
  last_login_at               DateTime?
  last_ip_address             String?
  last_user_agent             String?
  // Social Media Links (for duplicate detection)
  instagram_url               String?
  twitter_url                 String?
  // Signup Tracking
  signup_ip_address           String?
  signup_user_agent           String?
  signup_referrer             String?
  // Connected Accounts
  discord_user_id             String?
  discord_username            String?
  discord_access_token_hash   String?
  telegram_user_id            String?
  telegram_username           String?
  telegram_access_token_hash  String?
  twitter_user_id             String?
  twitter_username            String?
  twitter_access_token_hash   String?
  instagram_user_id           String?
  instagram_username          String?
  instagram_access_token_hash String?
  razed_user_id               String?
  razed_username               String?
  kick_connected              Boolean   @default(true)
  discord_connected           Boolean   @default(false)
  telegram_connected          Boolean   @default(false)
  twitter_connected           Boolean   @default(false)
  instagram_connected         Boolean   @default(false)
  razed_connected             Boolean   @default(false)
  is_admin                    Boolean   @default(false)
  is_excluded                 Boolean   @default(false)
  moderator_override          Boolean? // null = auto-detect, true = force on, false = force off
  created_at                  DateTime  @default(now())
  updated_at                  DateTime  @updatedAt

  // Relations
  sweet_coins                  UserSweetCoins?
  sweet_coin_history           SweetCoinHistory[]
  sent_messages                ChatMessage[]         @relation("SenderMessages")
  broadcaster_messages         ChatMessage[]         @relation("BroadcasterMessages")
  offline_sent_messages        OfflineChatMessage[]  @relation("OfflineSenderMessages")
  offline_broadcaster_messages OfflineChatMessage[]  @relation("OfflineBroadcasterMessages")
  stream_sessions              StreamSession[]
  user_sessions                UserSession[]
  raffles_created              Raffle[]
  raffle_entries               RaffleEntry[]
  advent_purchases             AdventPurchase[]
  purchase_transactions        PurchaseTransaction[]
  promo_codes_created          PromoCode[]           @relation("PromoCodeCreator")
  promo_code_redemptions       PromoCodeRedemption[] @relation("PromoCodeRedemptions")
  // Referral relations
  referrals_as_referrer        Referral[]            @relation("Referrer")
  referrals_as_referee         Referral[]            @relation("Referee")
  referral_rewards_earned      ReferralReward[]
  // Achievement system relations
  user_achievements            UserAchievement[]
  coin_ledger_entries          CoinLedger[]
  dashboard_login_days         DashboardLoginDay[]
  chat_counter                 ChatCounter?
  chat_days                    ChatDay[]
  leaderboard_period_results   LeaderboardPeriodResult[]
  monthly_wins                 MonthlyWinner[]
  watch_time_aggregate         WatchTimeAggregate?

  @@map("platform_users")
}

model PurchaseTransaction {
  id             BigInt   @id @default(autoincrement())
  user_id        BigInt
  type           String // advent_ticket | raffle_ticket | reward | bundle (future)
  quantity       Int
  sweet_coins_spent   Int
  item_name      String
  advent_item_id String?
  raffle_id      BigInt?
  metadata       Json?
  created_at     DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id, created_at])
  @@index([type, created_at])
  @@index([raffle_id])
  @@index([advent_item_id])
  @@map("platform_purchase_transactions")
}

model StreamSession {
  id                          BigInt    @id @default(autoincrement())
  broadcaster_user_id         BigInt
  channel_slug                String
  kick_stream_id              String? // Kick's video/VOD ID for thumbnail fetching
  session_title               String?
  thumbnail_url               String?
  thumbnail_captured_at       DateTime?
  thumbnail_last_refreshed_at DateTime?
  thumbnail_source            String?
  started_at                  DateTime  @default(now())
  ended_at                    DateTime?
  last_live_check_at          DateTime? // Last time we verified stream is actually live
  peak_viewer_count           Int       @default(0)
  total_messages              Int       @default(0)
  duration_seconds            Int?
  created_at                  DateTime  @default(now())
  updated_at                  DateTime  @updatedAt

  // Relations
  broadcaster   User           @relation(fields: [broadcaster_user_id], references: [kick_user_id])
  chat_messages ChatMessage[]
  sweet_coin_history SweetCoinHistory[]

  // Partial unique index enforced at database level via migration
  // Ensures only one active session per broadcaster
  @@index([broadcaster_user_id, ended_at])
  @@map("platform_stream_sessions")
}

model ChatMessage {
  id                    BigInt   @id @default(autoincrement())
  message_id            String   @unique
  stream_session_id     BigInt?
  sender_user_id        BigInt
  sender_username       String
  broadcaster_user_id   BigInt
  content               String   @db.Text
  emotes                Json?
  // Derived fields for fast analytics (computed at ingest time by worker)
  has_emotes            Boolean  @default(false)
  engagement_type       String   @default("regular")
  message_length        Int      @default(0)
  exclamation_count     Int      @default(0)
  sentence_count        Int      @default(0)
  timestamp             BigInt
  sender_username_color String?
  sender_badges         Json?
  sender_is_verified    Boolean  @default(false)
  sender_is_anonymous   Boolean  @default(false)
  sweet_coins_earned         Int      @default(0)
  sweet_coins_reason         String?
  sent_when_offline     Boolean  @default(false)
  created_at            DateTime @default(now())

  // Relations
  stream_session StreamSession? @relation(fields: [stream_session_id], references: [id])
  sender         User           @relation("SenderMessages", fields: [sender_user_id], references: [kick_user_id])
  broadcaster    User           @relation("BroadcasterMessages", fields: [broadcaster_user_id], references: [kick_user_id])

  @@index([stream_session_id, sent_when_offline])
  @@index([sender_user_id, stream_session_id])
  @@index([broadcaster_user_id, created_at])
  @@index([has_emotes])
  @@map("platform_chat_messages")
}

model OfflineChatMessage {
  id                    BigInt   @id @default(autoincrement())
  message_id            String   @unique
  sender_user_id        BigInt
  sender_username       String
  broadcaster_user_id   BigInt
  content               String   @db.Text
  emotes                Json?
  // Derived fields for fast analytics (computed at ingest time by worker)
  has_emotes            Boolean  @default(false)
  engagement_type       String   @default("regular")
  message_length        Int      @default(0)
  exclamation_count     Int      @default(0)
  sentence_count        Int      @default(0)
  timestamp             BigInt
  sender_username_color String?
  sender_badges         Json?
  sender_is_verified    Boolean  @default(false)
  sender_is_anonymous   Boolean  @default(false)
  created_at            DateTime @default(now())

  // Relations
  sender      User @relation("OfflineSenderMessages", fields: [sender_user_id], references: [kick_user_id])
  broadcaster User @relation("OfflineBroadcasterMessages", fields: [broadcaster_user_id], references: [kick_user_id])

  @@map("platform_offline_chat_messages")
}

model UserSweetCoins {
  id                        BigInt    @id @default(autoincrement())
  user_id                   BigInt    @unique
  total_sweet_coins         Int       @default(0)
  total_emotes               Int       @default(0)
  last_sweet_coin_earned_at DateTime?
  is_subscriber             Boolean   @default(false)
  created_at                DateTime  @default(now())
  updated_at                 DateTime  @updatedAt

  // Relations
  user User @relation(fields: [user_id], references: [id])

  @@map("platform_user_sweet_coins")
}

model SweetCoinHistory {
  id                BigInt   @id @default(autoincrement())
  user_id           BigInt
  stream_session_id BigInt?
  sweet_coins_earned     Int      @default(1)
  message_id        String?  @unique
  earned_at         DateTime @default(now())
  created_at        DateTime @default(now())

  // Relations
  user           User           @relation(fields: [user_id], references: [id])
  stream_session StreamSession? @relation(fields: [stream_session_id], references: [id])

  @@index([stream_session_id])
  @@index([user_id, earned_at])
  @@index([earned_at])
  @@map("platform_sweet_coin_history")
}

model Raffle {
  id                   BigInt    @id @default(autoincrement())
  title                String
  description          String?   @db.Text
  type                 String    @default("general") // daily, weekly, special, sub_only, general
  prize_description    String
  ticket_cost          Int
  max_tickets_per_user Int? // null = no limit
  total_tickets_cap    Int? // null = no cap
  start_at             DateTime
  end_at               DateTime
  status               String    @default("upcoming") // upcoming, active, drawing, completed, cancelled
  sub_only             Boolean   @default(false)
  hidden_until_start   Boolean   @default(false)
  hidden               Boolean   @default(false) // Hidden from public view by admin
  draw_seed            String? // For transparency
  number_of_winners    Int       @default(1)
  drawn_at             DateTime?
  claim_message        String?   @db.Text // Custom instructions for winners to claim prize
  created_by           BigInt
  created_at           DateTime  @default(now())
  updated_at           DateTime  @updatedAt

  creator        User                 @relation(fields: [created_by], references: [id])
  entries        RaffleEntry[]

  @@map("platform_raffles")
}

model RaffleEntry {
  id         BigInt   @id @default(autoincrement())
  raffle_id  BigInt
  user_id    BigInt
  tickets    Int      @default(1)
  source     String   @default("system")
  created_at DateTime @default(now())

  raffle      Raffle               @relation(fields: [raffle_id], references: [id], onDelete: Cascade)
  user        User                 @relation(fields: [user_id], references: [id])

  @@unique([raffle_id, user_id])
  @@map("platform_raffle_entries")
}

model UserSession {
  id           BigInt   @id @default(autoincrement())
  user_id      BigInt
  session_id   String   @unique // Unique session identifier (e.g., UUID)
  region       String? // Geographic region (e.g., "NA-East", "EU-West")
  country      String? // Country code (e.g., "US", "CA", "GB")
  client_type  String? // Client type: "web", "mobile", "embedded"
  user_agent   String?  @db.Text // User agent string (for device/browser detection)
  ip_hash      String? // Hashed IP address (for privacy - not storing raw IP)
  created_at   DateTime @default(now())
  last_seen_at DateTime @default(now())
  updated_at   DateTime @updatedAt

  // Relations
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([last_seen_at])
  @@map("platform_user_sessions")
}

model PromoCode {
  id           BigInt    @id @default(autoincrement())
  code         String    @unique
  sweet_coins_value Int
  max_uses     Int? // null = unlimited
  current_uses Int       @default(0)
  expires_at   DateTime?
  is_active    Boolean   @default(true)
  created_by   BigInt
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  // Relations
  creator     User                  @relation("PromoCodeCreator", fields: [created_by], references: [id])
  redemptions PromoCodeRedemption[]

  @@index([code])
  @@index([expires_at])
  @@index([is_active])
  @@map("platform_promo_codes")
}

model PromoCodeRedemption {
  id             BigInt   @id @default(autoincrement())
  promo_code_id  BigInt
  user_id        BigInt
  sweet_coins_awarded Int
  redeemed_at    DateTime @default(now())

  // Relations
  promo_code PromoCode @relation(fields: [promo_code_id], references: [id], onDelete: Cascade)
  user       User      @relation("PromoCodeRedemptions", fields: [user_id], references: [id])

  @@unique([promo_code_id, user_id])
  @@index([user_id])
  @@index([redeemed_at])
  @@map("platform_promo_code_redemptions")
}

model SweetCoinAwardJob {
  id                BigInt    @id @default(autoincrement())
  kick_user_id      BigInt
  stream_session_id BigInt?
  message_id        String    @unique
  badges            Json? // Badges array for subscriber detection
  emotes            Json? // Emotes array for emote counting
  status            String    @default("pending") // pending, processing, completed, failed
  attempts          Int       @default(0)
  locked_at         DateTime?
  processed_at      DateTime?
  last_error        String?   @db.Text
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  @@index([status, created_at])
  @@index([status, locked_at])
  @@map("platform_sweet_coin_award_jobs")
}

// Full chat message job queue - worker handles ALL writes
model ChatJob {
  id         BigInt @id @default(autoincrement())
  message_id String @unique

  // Full message payload (stored as JSON for flexibility)
  payload Json // Contains: sender, broadcaster, content, emotes, badges, timestamp, etc.

  // Denormalized fields for quick filtering
  sender_user_id      BigInt
  broadcaster_user_id BigInt
  stream_session_id   BigInt?

  // Job status
  status       String    @default("pending") // pending, processing, completed, failed
  attempts     Int       @default(0)
  locked_at    DateTime?
  processed_at DateTime?
  last_error   String?   @db.Text
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  @@index([status, created_at])
  @@index([status, locked_at])
  @@map("platform_chat_jobs")
}

model AdventPurchase {
  id         BigInt   @id @default(autoincrement())
  user_id    BigInt
  item_id    String // e.g. "day-9", "day-23a"
  tickets    Int      @default(1)
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])

  @@unique([user_id, item_id])
  @@map("platform_advent_purchases")
}

model Referral {
  id               BigInt   @id @default(autoincrement())
  referrer_user_id BigInt
  referee_user_id  BigInt
  referral_code    String // The code used at signup
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  // Relations
  referrer User @relation("Referrer", fields: [referrer_user_id], references: [id], onDelete: Cascade)
  referee  User @relation("Referee", fields: [referee_user_id], references: [id], onDelete: Cascade)

  // Unique constraint - one referee per referrer
  @@unique([referee_user_id])
  @@index([referrer_user_id])
  @@index([referral_code])
  @@index([created_at])
  @@map("platform_referrals")
}

model ReferralReward {
  id               BigInt   @id @default(autoincrement())
  referrer_user_id BigInt
  referee_user_id  BigInt
  tier_id          String // 'starter', 'active', 'dedicated', 'superfan', 'legend'
  required_sweet_coins  Int // Sweet Coins threshold that was reached
  reward_sweet_coins    Int // Sweet Coins awarded to referrer
  awarded_at       DateTime @default(now())
  created_at       DateTime @default(now())

  // Relations
  referrer_user User @relation(fields: [referrer_user_id], references: [id], onDelete: Cascade)

  // Unique constraint - one reward per tier per referral pair
  @@unique([referrer_user_id, referee_user_id, tier_id])
  @@index([referrer_user_id])
  @@index([awarded_at])
  @@map("platform_referral_rewards")
}

model AppSetting {
  key         String   @id
  value       String   @db.Text
  updated_at  DateTime @updatedAt
  created_at  DateTime @default(now())

  @@map("platform_app_settings")
}

// AI Moderation Action Log - tracks every moderation action taken
model ModerationActionLog {
  id                  BigInt   @id @default(autoincrement())
  broadcaster_user_id BigInt
  target_user_id      BigInt
  target_username     String
  action_type         String   // timeout | ban | unban | delete_message
  duration_seconds    Int?     // For timeouts
  reason              String?  @db.Text
  rule_id             String?  // spam | repeated_message | raid_spam | ai_moderation | repeat_offender
  ai_flagged          Boolean  @default(false)
  ai_categories       Json?    // OpenAI moderation categories that triggered
  ai_max_score        Float?   // Highest score from OpenAI
  message_content     String?  @db.Text // The message that triggered the action
  message_id          String?
  raid_mode_active    Boolean  @default(false)
  dry_run             Boolean  @default(false)
  success             Boolean  @default(true)
  error_message       String?  @db.Text
  created_at          DateTime @default(now())

  @@index([broadcaster_user_id, created_at])
  @@index([target_user_id, created_at])
  @@index([action_type, created_at])
  @@index([rule_id, created_at])
  @@index([ai_flagged, created_at])
  @@map("platform_moderation_action_logs")
}

// Bot Reply Log - tracks bot replies for analysis
model BotReplyLog {
  id                  BigInt   @id @default(autoincrement())
  broadcaster_user_id BigInt
  trigger_user_id     BigInt
  trigger_username    String
  trigger_message     String   @db.Text
  reply_content       String   @db.Text
  reply_type          String   // ai | simple | quick_response
  ai_model            String?
  success             Boolean  @default(true)
  error_message       String?  @db.Text
  latency_ms          Int?
  created_at          DateTime @default(now())

  @@index([broadcaster_user_id, created_at])
  @@index([reply_type, created_at])
  @@map("platform_bot_reply_logs")
}

// Razed Account Verification - tracks chat-based verification codes
model RazedVerification {
  id                BigInt   @id @default(autoincrement())
  kick_user_id      BigInt
  razed_username    String
  verification_code String   @unique
  status            String   @default("pending") // pending, verified, expired
  verified_at       DateTime?
  expires_at        DateTime
  created_at        DateTime @default(now())

  @@index([verification_code])
  @@index([status, expires_at])
  @@map("platform_razed_verifications")
}

// Achievement system tables
enum AchievementCategory {
  STREAMS
  COMMUNITY
  CHAT
  LEADERBOARD
  SPECIAL
}

enum AchievementStatus {
  LOCKED
  UNLOCKED
  CLAIMED
}

model AchievementDefinition {
  id           String               @id // e.g. "DISCORD_CONNECTED"
  category     AchievementCategory
  title        String
  description  String
  reward_coins Int
  claimable    Boolean              @default(true)
  sort_order   Int                  @default(0)
  created_at   DateTime             @default(now())
  updated_at   DateTime             @updatedAt

  user_achievements UserAchievement[]

  @@map("platform_achievement_definitions")
}

model UserAchievement {
  id             BigInt            @id @default(autoincrement())
  user_id        BigInt
  achievement_id String
  status         AchievementStatus @default(LOCKED)
  unlocked_at    DateTime?
  claimed_at     DateTime?
  created_at     DateTime          @default(now())
  updated_at     DateTime          @updatedAt

  user        User                  @relation(fields: [user_id], references: [id], onDelete: Cascade)
  achievement AchievementDefinition @relation(fields: [achievement_id], references: [id], onDelete: Cascade)

  @@unique([user_id, achievement_id])
  @@index([user_id])
  @@index([achievement_id])
  @@index([status])
  @@map("platform_user_achievements")
}

model CoinLedger {
  id         BigInt   @id @default(autoincrement())
  user_id    BigInt
  amount     Int      // positive for credits, negative for debits
  reason     String   // e.g. "achievement_claim", "chat_message", "promo_code"
  ref_id     String?  // idempotency key, e.g. "achievement:DISCORD_CONNECTED:123"
  metadata   Json?    // optional extra data
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_id, ref_id])
  @@index([user_id, created_at])
  @@index([reason])
  @@map("platform_coin_ledger")
}

model DashboardLoginDay {
  id        BigInt   @id @default(autoincrement())
  user_id   BigInt
  day       DateTime @db.Date
  month_key String   // YYYY-MM format for quick monthly queries
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_id, day])
  @@index([user_id, month_key])
  @@map("platform_dashboard_login_days")
}

model ChatCounter {
  id            BigInt   @id @default(autoincrement())
  user_id       BigInt   @unique
  message_count Int      @default(0)
  emote_count   Int      @default(0)
  updated_at    DateTime @updatedAt
  created_at    DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("platform_chat_counters")
}

model ChatDay {
  id         BigInt   @id @default(autoincrement())
  user_id    BigInt
  day        DateTime @db.Date
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_id, day])
  @@index([user_id])
  @@map("platform_chat_days")
}

model LeaderboardPeriodResult {
  id         BigInt   @id @default(autoincrement())
  period_key String   // e.g. "2026-01-W01" or "2026-01"
  user_id    BigInt
  rank       Int
  points     Int
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([period_key, user_id])
  @@index([period_key, rank])
  @@map("platform_leaderboard_period_results")
}

model MonthlyWinner {
  id         BigInt   @id @default(autoincrement())
  month_key  String   @unique // YYYY-MM format
  user_id    BigInt
  points     Int
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("platform_monthly_winners")
}

model WatchTimeAggregate {
  id               BigInt   @id @default(autoincrement())
  user_id          BigInt   @unique
  total_minutes    Int      @default(0)
  last_updated_at  DateTime @updatedAt
  created_at       DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("platform_watch_time_aggregates")
}
