# Database
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Kick OAuth
KICK_CLIENT_ID=your_kick_client_id
KICK_CLIENT_SECRET=your_kick_client_secret

# Application URL (for OAuth redirects and webhooks)
NEXT_PUBLIC_APP_URL=https://www.sweetflipsrewards.com

# External Webhook URL (optional - for forwarding webhooks)
EXTERNAL_WEBHOOK_URL=https://www.sweetflipsrewards.com/api/webhooks/kick

# Discord OAuth (optional)
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=https://www.sweetflipsrewards.com/api/oauth/discord/callback

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_BOT_USERNAME=your_telegram_bot_username

# Pusher (if using Pusher for real-time)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=your_pusher_cluster

# Webhook Tunnel URL (for local development with ngrok)
WEBHOOK_TUNNEL_URL=
NEXT_PUBLIC_WEBHOOK_TUNNEL_URL=
